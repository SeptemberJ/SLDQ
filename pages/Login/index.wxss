.loginBox{
    width: 80%;
    margin: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10rpx 20rpx;
}
.loginT{
    width: 100%;
    height: 100rpx;
    margin-top:30rpx;
    font-size: 60rpx;
    line-height: 72rpx;
    font-weight: bold;
    color: #609ddc;
    text-align: center;
}
.item{
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    overflow: hidden; 
}
.item .icon{
    width: 10%;
} 
.item .userBox ,.item .psdBox ,.item .roleBox{
    width: 85%;
} 
.OperationBar{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    overflow: hidden; 
}
checkbox-group{
  font-size: 32rpx;
  color: #999;
}




.radio{
  margin-left: 20rpx;
}
.item image{
    width: 60rpx;
    height: 60rpx;
}

.item input{
    /*width: calc(100%-60rpx);*/
    width: 100%;
    margin: auto 5%;
    padding: 5rpx 10rpx;
}
.normalColor{
    border-bottom: 4rpx solid #999;
}
.changeBorderColor{
    border-bottom: 4rpx solid #3b5d9d;
}

.apply-add {
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
    border-radius: 50%;
    background: #3b5d9d;
    font-size: 32rpx;
    font-weight: bold;
    /* width:80%;
    background: #2F3C4D;
